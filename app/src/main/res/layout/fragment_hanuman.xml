<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/layout"
    android:background="@drawable/gradient_sylivia_list"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>

  <ImageView
      android:id="@+id/iv_backBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_backbuttonwhite"
      android:layout_marginStart="16dp"
      app:layout_constraintTop_toTopOf="@id/guidelineTop"
      app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/iv_hnumanimg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/iv_backBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        android:scaleType="fitXY"
        android:src="@drawable/ic_avatar"/>
<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/iv_hnumanimg"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@color/colorWhite"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_height="0dp">
    <TextView
        android:id="@+id/txtv_hanuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hanuman_chalisa"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="12sp"
        android:textSize="20sp"
        android:elevation="4dp"
        android:padding="14dp"
        style="@style/StyleSemiBold"
        android:textColor="@color/colorOrange"/>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>