<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"/>
            <TextView
                android:id="@+id/txtv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location_txt"
                style="@style/StyleRegular"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                android:textSize="16sp"
                android:textColor="@color/colorGray5"/>
            <TextView
                android:id="@+id/txtv_allowloction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allow_location_access"
                app:layout_constraintTop_toBottomOf="@id/txtv_location"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/txtv_location"
                style="@style/StyleRegular"
                android:textSize="12sp"
                android:textColor="@color/colorGray7"/>
            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorgray11"
                app:layout_constraintTop_toBottomOf="@id/txtv_allowloction"
                app:layout_constraintStart_toStartOf="@id/txtv_allowloction"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"/>

            <TextView
                android:id="@+id/txtv_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contacts"
                android:textSize="16sp"
                style="@style/StyleRegular"
                android:textColor="@color/colorGray5"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintStart_toStartOf="@id/view"
                android:layout_marginTop="18dp"/>
            <TextView
                android:id="@+id/txtv_alowcontacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allow_contacts"
                style="@style/StyleRegular"
                android:textSize="12sp"
                android:textColor="@color/colorGray15"
                app:layout_constraintTop_toBottomOf="@id/txtv_contacts"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/txtv_contacts"/>
            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorgray11"
                app:layout_constraintTop_toBottomOf="@id/txtv_alowcontacts"
                app:layout_constraintStart_toStartOf="@id/txtv_alowcontacts"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"/>
            <TextView
                android:id="@+id/txtv_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Notification"
                android:textSize="16sp"
                style="@style/StyleRegular"
                android:textColor="@color/colorGray5"
                app:layout_constraintTop_toBottomOf="@id/view2"
                app:layout_constraintStart_toStartOf="@id/view2"
                android:layout_marginTop="18dp"/>
            <TextView
                android:id="@+id/txtv_push_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allow_push_notification"
                style="@style/StyleRegular"
                android:textSize="12sp"
                android:textColor="@color/colorGray15"
                app:layout_constraintTop_toBottomOf="@id/txtv_notification"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/txtv_notification"/>
            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorgray11"
                app:layout_constraintTop_toBottomOf="@id/txtv_push_notification"
                app:layout_constraintStart_toStartOf="@id/txtv_push_notification"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"/>
            <TextView
                android:id="@+id/txtv_tutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial"
                android:textSize="16sp"
                style="@style/StyleRegular"
                android:textColor="@color/colorGray5"
                app:layout_constraintTop_toBottomOf="@id/view3"
                android:layout_marginTop="36dp"
                app:layout_constraintStart_toStartOf="@id/view3"/>
            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorgray11"
                app:layout_constraintTop_toBottomOf="@id/txtv_tutorial"
                app:layout_constraintStart_toStartOf="@id/txtv_tutorial"
                android:layout_marginTop="26dp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"/>
            <TextView
                android:id="@+id/txtv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback"
                android:textSize="16sp"
                style="@style/StyleRegular"
                android:textColor="@color/colorGray5"
                app:layout_constraintTop_toBottomOf="@id/view4"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="@id/view4"/>
            <View
                android:id="@+id/view5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorgray11"
                app:layout_constraintTop_toBottomOf="@id/txtv_feedback"
                app:layout_constraintStart_toStartOf="@id/txtv_feedback"
                android:layout_marginTop="26dp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"/>
            <TextView
                android:id="@+id/txtv_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy"
                android:textSize="16sp"
                style="@style/StyleRegular"
                android:textColor="@color/colorGray5"
                app:layout_constraintTop_toBottomOf="@id/view5"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="@id/view5"/>
            <View
                android:id="@+id/view6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorgray11"
                app:layout_constraintTop_toBottomOf="@id/txtv_privacy"
                app:layout_constraintStart_toStartOf="@id/txtv_privacy"
                android:layout_marginTop="26dp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"/>
            <TextView
                android:id="@+id/txtv_termsCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_conditions"
                android:textSize="16sp"
                style="@style/StyleRegular"
                android:textColor="@color/colorGray5"
                app:layout_constraintTop_toBottomOf="@id/view6"
                android:layout_marginTop="36dp"
                app:layout_constraintStart_toStartOf="@id/view6"/>
            <View
                android:id="@+id/view7"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorgray11"
                app:layout_constraintTop_toBottomOf="@id/txtv_termsCondition"
                app:layout_constraintStart_toStartOf="@id/txtv_termsCondition"
                android:layout_marginTop="26dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="100dp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchbtn_Location"
                android:layout_width="wrap_content"
                android:checked="true"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchCompatTheme"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintTop_toTopOf="@id/txtv_location"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchbtn_Contacts"
                android:layout_width="wrap_content"
                android:theme="@style/SwitchCompatTheme"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintTop_toTopOf="@id/txtv_contacts"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchbtn_Notification"
                android:layout_width="wrap_content"
                android:checked="true"
                android:theme="@style/SwitchCompatTheme"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintTop_toTopOf="@id/txtv_notification"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>