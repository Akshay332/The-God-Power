<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/txtv_Trouvaille"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/god_of_mercy"
    style="@style/StyleRegularGalaxybt"
    android:textColor="@color/colorWhite"
    android:textSize="40sp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintVertical_bias="0.12"/>

    <Button
        android:id="@+id/signin_GoogleBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_white_rectangle_shape"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:shadowColor="#EF4036"
        android:text="@string/next"
        android:textColor="@color/colorGray5"
